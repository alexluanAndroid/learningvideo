<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.luanalex.blgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LaunchActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name=".Activities.LoginModule.LoginActivity" />
        <activity
            android:name=".MainTabActivity"
            android:label="@string/title_activity_main_tab"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".BaseActivity.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/TextAppearance.AppCompat" />
        <activity
            android:name=".Activities.PersonModule.PersonActivity"
            android:label="@string/title_activity_person" />
        <activity
            android:name=".Activities.GameModule.VideoActivity"
            android:label="@string/title_activity_video"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>